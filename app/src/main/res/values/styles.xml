<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BaseFullscreen" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullscreen" parent="BaseFullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonBase" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBaseBlue" parent="ButtonBase">
        <item name="android:background">@drawable/rounded_corners_stroke_blue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonBaseGreen" parent="ButtonBase">
        <item name="android:background">@drawable/rounded_corners_stroke_green</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LinkButtonBase" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CommonIcon">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CommonTitleText" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultTextField" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
